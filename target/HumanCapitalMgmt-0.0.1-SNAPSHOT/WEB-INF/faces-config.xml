<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">   
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>dashboard</from-outcome>
			<to-view-id>/workspace/dashboard.xhtml</to-view-id>  			
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>  			
		</navigation-case>
	</navigation-rule>  
	<navigation-rule>
		<from-view-id>/workspace/dashboard.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>  			
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/user-manage/create-user.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>view-user</from-outcome>
			<to-view-id>/user-manage/view-user.xhtml</to-view-id>  			
		</navigation-case>
	</navigation-rule> 
	<managed-bean>
		<managed-bean-name>role</managed-bean-name>
		<managed-bean-class>hcm.user.models.RolesPermission</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>hcm.user.models.User</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userRole</managed-bean-name>
		<managed-bean-class>hcm.user.models.UserRole</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>roleBean</managed-bean-name>
		<managed-bean-class>hcm.user.beans.RoleBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>roleModel</property-name>
			<value>#{roleModel}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userBean</managed-bean-name>
		<managed-bean-class>hcm.user.beans.UserBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>userModel</property-name>
			<value>#{userModel}</value>
		</managed-property>
		<managed-property>
			<property-name>userRoleModel</property-name>
			<value>#{userRoleModel}</value>
		</managed-property>
	</managed-bean>
</faces-config>
